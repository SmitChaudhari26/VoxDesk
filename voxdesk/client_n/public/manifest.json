{
  "manifest_version": 3,
  "name": "VoxDesk",
  "version": "1.0",
  "description": "Voice-powered desktop in your browser",
  "icons": {
    "16": "favicon.ico",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "192": "logo192.png",
      "512": "logo512.png"
    }
  }
}